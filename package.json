    "feathers-sequelize": "^6.1.0",
    "feathers-swagger": "^1.1.1",
    "helmet": "^3.21.2",
    "mysql2": "^2.1.0",
    "nodemailer-smtp-transport": "^2.7.4",
    "pug-html-loader": "^1.1.5",
