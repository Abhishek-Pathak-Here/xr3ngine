{
    "compilerOptions": {
      "outDir": "./dist",
      "target": "ES5",
      "module": "ES6",
      "sourceMap": true,
      "declaration": true,
      "downlevelIteration": true,
      "strict": false,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "include": [
      "src/**/*"
    ],
    "exclude": ["node_modules", "dist"]
  }